<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/nonUserPages.css">
<%- include('./partials/nav') %>

<main>
  <h1>Please Login to Use This Feature</h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
    <div id="homeSelection">
      <form action="">
        <button class="btn btn-primary">Create Issue</button>
      </form>
      <form action="">
        <button class="btn btn-primary">Open Issues</button>
      </form>
    </div>

  <% } else { %>
    <h2>Most functions are limited to signed in users.</h2>
    <% } %> 
</main>

<%- include('./partials/footer') %>
