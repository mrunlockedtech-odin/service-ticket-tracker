<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

    <main>
      <table class="table">
        <thead>
          <th>Ticket Name</th>
          <th>Ticket Number</th>
          <th>Created Date</th>
          <th>Last Updated</th>
          <th></th>
        </thead>
        <tbody>
          <% tickets.forEach(ticket=> { %>
            <% if (ticket.owner.equals(user?.profile._id) || profile?.isAdmin) { %>
              <tr>
                <td>
                  <a href="/tickets/<%= ticket.id %>">
                    <%= ticket.name %>
                  </a>

                </td>
                <td>
                  <%= ticket.ticketNo %>
                </td>
                <td>
                  <%= ticket.createdAt.toDateString() %>
                </td>
                <td>
                  <%= ticket.updatedAt.toDateString() %>
                </td>
                <td>
                  <form action="/tickets/<%= ticket.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>

              <% } %>

                <% }) %>
        </tbody>
      </table>


    </main>
<%- include('../partials/footer') %>