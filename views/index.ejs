<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/nonUserPages.css">
<%- include('./partials/nav') %>

<main>
  <h1>Welcome to ServiceTicketTracker+</h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
    <div id="homeSelection">
      <form action="/tickets/new">
        <button class="btn btn-primary">Create Issue</button>
      </form>
      <form action="/tickets">
        <button class="btn btn-primary">Open Issues</button>
      </form>
    </div>

  <% } else { %>
    <h2>Please Login Above to Use the Service Desk</h2>
    <% } %> 
</main>

<%- include('./partials/footer') %>
